<% action = (kid.persisted? ? kid_path(kid) : kids_path) %>
<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>
<form action="<%= action %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <% if kid.persisted? %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>
  <div class="card card-block">
    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right">Name:</label>
      <div class="col-sm-10">
        <input type="text" name="kid[nickname]" class="form-control boxed" placeholder="Nickname" required value="<%= kid.nickname %>">
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right">Birth Date</label>
      <div class="col-sm-10">
        <input type="date" class="form-control boxed" name="kid[birthdate]" id="" value="<%= kid.birthdate %>" />
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right">Special Instructions</label>
      <div class="col-sm-10">
        <textarea placeholder="My child only eats free range gluten free dairy free locally sourced organic and is allergic to..." class="form-control boxed" name="kid[instructions]"><%= kid.instructions %></textarea>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10 col-sm-offset-2">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </div>
</form>

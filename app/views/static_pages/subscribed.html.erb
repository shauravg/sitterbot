<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title> SitterBot | Thanks!</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/vendor.css">
    <link rel="stylesheet" href="css/app.css">
    <style>
      .error-card .error-title {
        font-size: 80px;
      }
      * {
        margin: 0;
      }
      html, body {
        height: 100%;
      }
      .app {
        min-height: 100%;
        /* equal to footer height */
        margin-bottom: -142px;
      }
      .app:after {
        content: "";
        display: block;
      }
      .thanks-footer, .page-wrap:after {
        height: 142px;
      }
      .thanks-footer {
        z-index: 10000;
        color: #373a3c;
        background-color: white;
        position: absolute;
        width: 100%;
        text-align: center;
        padding-top: 50px;
      }
      .btn-poweredby img {
        max-height: 20px;
      }
    </style>
  </head>
  <body>
    <div class="app blank sidebar-opened">
      <article class="thanks-content content">
        <div class="error-card global">
          <div class="error-title-block">
            <h1 class="error-title">Thanks!</h1>
            <h2 class="error-sub-title">
              Head on over and checkout your sitter <%= link_to "Home", "/" %>.
            </h2>
          </div>
        </div>
      </article>
    </div>
    <footer class="thanks-footer text-center">
      <p>
      Powered by
        <a href="<%= welcome_url(utm_source: 'subscribed') %>" class="btn btn-primary btn-poweredby">
          <img src="/logos/white-logo-100x100.png">
          SitterBot
        </a>
      </p>
      <p>
        <small class="text-muted">
          Finding your babysitters with bot
        </small>
      </p>
    </footer>
    <!-- Reference block for JS -->
    <div class="ref" id="ref">
      <div class="color-primary"></div>
      <div class="chart">
        <div class="color-primary"></div>
        <div class="color-secondary"></div>
      </div>
    </div>
    <script src="js/vendor.js"></script>
    <script src="js/app.js"></script>
  </body>
</html>

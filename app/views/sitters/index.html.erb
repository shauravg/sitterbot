<article class="content items-list-page">
  <div class="title-search-block">
    <div class="title-block">
      <div class="row">
        <div class="col-md-6">
          <h3 class="title">
            Sitters
            <a href="/sitters/new" class="btn btn-primary btn-sm rounded-s">
              Add New
            </a>
          </h3>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="card table-responsive">
        <table class="table ">
          <thead>
            <tr>
              <th>Name</th>
              <th>Phone</th>
              <th>Email</th>
              <th>Rate</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @sitters.each do |sitter| %>
              <tr>
                <td><%= link_to sitter.name, sitter %></td>
                <td><%= sitter.phone %></td>
                <td><%= sitter.email %></td>
                <td><%= number_to_currency(sitter.hourly_rate) %></td>
                <td>
                  <%= link_to "edit", edit_sitter_path(sitter), class: "btn btn-sm btn-primary-outline" %>
                </td>
                <td>
                  <%= button_to "delete", sitter_path(sitter), method: :delete, class: "btn btn-sm btn-danger-outline" %>
                </td>
                <td>
                  <div class="col-lg-6">
                    <form action="<%= share_sitter_path(sitter, params[:share_email]) %>" method="POST">
                      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                      <div class="input-group">
                        <input type="text" placeholder="Share with..." name="share_email">
                        <span class="input-group-btn">
                          <button class="btn btn-sm btn-success">Share!</button>
                        </span>
                      </div>
                    </form>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</article>
